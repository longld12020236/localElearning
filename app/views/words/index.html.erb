<p id="notice"><%= notice %></p>

<h1>All Words</h1>

<table class="word" border="1" >
  <thead>
    <tr text-align="center">
      <th>Word</th>
      <th>Mean</th>
      <th>Category</th>
       <th colspan="3">Action</th>

    </tr>
  </thead>

  <tbody >
    <% @words.each do |word| %>
      <tr>
        <td><%= word.word %></td>
        <td><%= word.mean %></td>
        <td><%= word.category.tittle%></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
<h3><%= link_to 'Create new word', new_word_path %></h3>

  </tbody>
</table>


