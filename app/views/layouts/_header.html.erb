    <%= link_to t("Elearning") , root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), root_path %></span> </li>
        <% if logged_in? %>

          <% if current_user.is_admin? %>
            <li class="dropdown">
              <%= link_to "#", {class: "dropdown-toggle",
                "data-toggle": "dropdown"} do %>

                <%= t "is_admin.role" %>

                <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to t("admin.management_user"),
                  users_path %></li>
                <li><%= link_to t("admin.management_category"),

                   categories_path %></li>
                <li><%= link_to t("admin.management_word"),
                   "#" %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t("user"), users_path %></li>
          <% end %>
          <li class="dropdown">
            <%= link_to "#", {class: "dropdown-toggle",
              "data-toggle": "dropdown"} do %>
              <%= t "account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to t("profile"), current_user %></li>
              <li><%= link_to t("Categories list"), categories_path %></li>
              <li><%= link_to t("settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("sign_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
